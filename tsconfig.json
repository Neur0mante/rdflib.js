{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": false,
    "allowJs": true,
    "allowUnreachableCode": true,
    "types": [
      "node",
      "mocha",
      "bluebird",
      "chai",
      "chai-as-promised",
      "diff"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "src",
    "tests",
    "build",
    "ts-dist"
  ]
}
